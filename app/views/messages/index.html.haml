-# .flash-box
-#   .flash-box__text
-#     グループを作成しました
.chat
  .chat__side
    .chat__side__header
      .chat__side__header__box
        .chat__side__header__box__name
          name
        .chat__side__header__box__btn
          =link_to "", class: "chat__side__header__box__btn__new-group" do
            = fa_icon 'edit'
          =link_to "", class: "chat__side__header__box__btn__edit-user" do
            = fa_icon 'cog'      
    .chat__side__groups
      .chat__side__groups__group
        .chat__side__groups__group__name
          TEST
        .chat__side__groups__group__message
          Hello!
  .chat__main
    .chat__main__header
      .chat__main__header__left
        .chat__main__header__left__group
          Group
        .chat__main__header__left__members
          Member
      =link_to "", class: "chat__main__header__btn" do
        EDIT
    .chat__main__messages
      .chat__main__messages__message
        .chat__main__messages__message__upper
          .chat__main__messages__message__upper__name
            Name
          .chat__main__messages__message__upper__date
            Date
        .chat__main__messages__message__text
          Text
    .chat__main__form
      %form.chat__main__form__box
        .chat__main__form__box__input
          %input.chat__main__form__box__input__text{type:"text", name:"message", placeholder:'type a message'}
          %label.chat__main__form__box__input__upload-label{for: "upload-icon"}
            =fa_icon "image"
            %input.chat__main__form__box__input__upload-label__icon{type: "file", id: "upload-icon"}
        %input.chat__main__form__box__btn{type:"submit", value:"Send"}